<h1> Places controller </h1>

<div>

	<% if @place.present? %>

	Title: <%= @place.title %>

	<br/>

	Address: <%= @place.address %>

	</br>


	Lat: <%= @place.lat %>

	</br>	

	Long: <%= @place.lng %>

	</br>
	</br>


	<script src="//maps.google.com/maps?file=api&amp;v=2&amp;key=AIzaSyDzleZt1Cn-Ha1cn19cC8LOKVFueX_iYB4"
            type="text/javascript"></script>





    <script type="text/javascript">
    
    $(function() {

    	$( window ).unload(function() {
		GUnload();
		});

      if (GBrowserIsCompatible()) {
        var map = new GMap2(document.getElementById("map_canvas"));
        map.setCenter(new GLatLng(<%= @place.lat %>, <%= @place.lng %>), 13);
 
        var point = new GLatLng(<%= @place.lat %>, <%= @place.lng %> );
          map.addOverlay(new GMarker(point));



      }
    
     })

    </script>

    <div id="map_canvas" style="width: 500px; height: 300px"></div>



	<% else %>

	<h2>

		Enter a place because we dont have any.

	</h2>

	<% end %>




</div>